{
    "name":"RegularSearch",
    "version":"1.0", 
    "description": "Cette extension vous aide à faire des recherches à l'aide des expressions régulières",

    "permissions": ["storage","declarativeContent","activeTab"],

    "background":{
        "scripts":["background.js"], 
        "persistent":false
    },

    "browser_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
          }
    },
    
    "options_page": "options.html",
    
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["highlight.css"],
          "js": ["findingRegX.js"]
        }
      ],
    "manifest_version":2
}